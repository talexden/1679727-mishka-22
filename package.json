{
  "name": "mishka-22",
  "private": true,
  "description": "Личный проект «Мишка» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "autoprefixer": "10.2.5",
    "browser-sync": "2.26.14",
    "cross-env": "7.0.3",
    "gulp": "4.0.2",
    "gulp-data": "1.3.1",
    "gulp-html-beautify": "1.0.1",
    "gulp-htmlhint": "4.0.0",
    "gulp-if": "3.0.0",
    "gulp-less": "4.0.1",
    "gulp-lintspaces": "1.0.1",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.0",
    "gulp-sourcemaps": "3.0.0",
    "gulp-stylelint": "13.0.0",
    "gulp-twig": "1.2.0",
    "gulp-w3c-html-validator": "2.0.1",
    "husky": "5.2.0",
    "postcss": "8.2.8",
    "stylelint": "13.12.0",
    "stylelint-config-htmlacademy": "0.1.4",
    "stylelint-order-htmlacademy": "2.0.3"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/less/**/*.less\" --syntax less",
    "test": "gulp test && npm run editorconfig && npm run stylelint",
    "build": "gulp build",
    "start": "gulp",
    "start:offline": "cross-env IS_OFFLINE=1 gulp"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "14.15.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  }
}
