{% macro symbol(id, width, height, class = '') %}
  <svg class="symbol {{ class }}" width="{{ width }}" height="{{ height }}" xmlns="http://www.w3.org/2000/svg">
    <use xlink:href="{{ root }}img/sprite.svg#{{ id }}" />
  </svg>
{% endmacro %}



{% macro picture(name = '', ext = '', class = '', alt = '') %}
  <picture>
    <source media="(min-width: 1150px)" srcset="{{ root }}img/{{ name }}-desktop.{{ ext }} 1x, {{ root }}img/{{ name }}-desktop@2x.{{ ext }} 2x">
    <source media="(min-width: 768px)" srcset="{{ root }}img/{{ name }}-tablet.{{ ext }} 1x, {{ root }}img/{{ name }}-tablet@2x.{{ ext }} 2x">
    <img class="img {{ class }}" src="{{ root }}img/{{ name }}-mobile.{{ ext }}" srcset="{{ root }}img/{{ name }}-mobile@2x.{{ ext }} 2x" alt="{{ alt }}">
  </picture>
{% endmacro %}
