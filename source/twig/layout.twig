{% from 'macro.twig' import symbol %}

<!DOCTYPE html>
<html class="page" lang="ru">
  <head>
    <meta charset="utf-8">

    <title>Мишка: {{ title }}</title>

  </head>
  <body class="page__body">

    {% include 'partials/header.twig' %}

    <main>
      <header class="main-header">

        <h1 class="{{ page != 'index' ? 'heading main-header__heading' : 'visually-hidden' }}">{{ h1 }}</h1>

        {% block extendMainHeader %}
        {% endblock %}

      </header>

      {% block pageMain %}
      {% endblock %}

    </main>

    {% include 'partials/footer.twig' %}

  </body>
</html>
