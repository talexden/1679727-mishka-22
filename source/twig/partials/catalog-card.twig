{% set cartLink %}
  <a class="catalog__popup-link" href="#!">
    {{ symbol('cart', 20, 19, 'catalog__icon') }}
  </a>
{% endset %}

<section class="catalog">
  <h2 class="visually-hidden">Карточки товаров</h2>
  <ul class="catalog__list">
    <li class="catalog__item">
      <a class="catalog__card-link" href="#!">
        {{ picture('photo-1', 'jpg', 'catalog__image', 'Вязаный зайчик, голубого цвета и с белой головой, на фоне оранжевого горшка') }}
      </a>
      <div class="catalog__card-wrapper">
        <a class="catalog__card-link" href="#!">
          <h3 class="catalog__card-heading">Зайчик-попрыгайчик</h3>
        </a>
        <p class="catalog__card-info">Рост 30 см, вес 200 г</p>
        <p class="catalog__card-price">
          1 200 руб.
          <a class="catalog__popup-link" href="#!" aria-label="Зайчик-попрыгайчик, добавить в список покупок">
            {{ symbol('cart', 20, 19, 'catalog__icon') }}
          </a>
        </p>
      </div>
    </li>
    <li class="catalog__item">
      <a class="catalog__card-link" href="#!">
        {{ picture('photo-2', 'jpg', 'catalog__image', 'Вязаная розовая корзина с белым верхом. В корзине стоят три простыни, свернутые в рулоны') }}
      </a>
      <div class="catalog__card-wrapper">
        <a class="catalog__card-link" href="#!">
          <h3 class="catalog__card-heading">Корзинка для белья</h3>
        </a>
        <p class="catalog__card-info">Диаметр 15 см, высота 10 см</p>
        <p class="catalog__card-price">
          690 руб.
          <a class="catalog__popup-link" href="#!" aria-label="Корзинка для белья, добавить в список покупок">
            {{ symbol('cart', 20, 19, 'catalog__icon') }}
          </a>
        </p>
      </div>
    </li>
    <li class="catalog__item">
      <a class="catalog__card-link" href="#!">
        {{ picture('photo-3', 'jpg', 'catalog__image', 'Большая зеленая вязаная корзина с белым верхом. Корзина наполненая вязаными игрушками') }}
      </a>
      <div class="catalog__card-wrapper">
        <a class="catalog__card-link" href="#!">
          <h3 class="catalog__card-heading">Большая корзинка для&nbsp;игрушек</h3>
        </a>
        <p class="catalog__card-info">Диаметр 30 см, высота 30 см</p>
        <p class="catalog__card-price">
          1 500 руб.
          <a class="catalog__popup-link" href="#!" aria-label="Большая корзинка, добавить в список покупок">
            {{ symbol('cart', 20, 19, 'catalog__icon') }}
          </a>
        </p>
    </div>
    </li>
  </ul>
</section>
{% include 'popup-form.twig' %}
